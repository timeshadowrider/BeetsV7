# =============================================================================
# BeetsV7 Environment Configuration - EXAMPLE
# Copy to .env and fill in your real values.
# This file is safe to commit to git.
# =============================================================================

# App / Container
APP_PORT=7080
TZ=America/Los_Angeles
PUID=1000
PGID=1000

# Pipeline Scheduler
PIPELINE_MODE=continuous
PIPELINE_INTERVAL_MINUTES=10

# Metadata Refresh Scheduler
METADATA_REFRESH_MODE=daily
METADATA_REFRESH_TIME=03:00
METADATA_REFRESH_INTERVAL_HOURS=6

# Discogs Refresh Scheduler
DISCOGS_REFRESH_MODE=weekly
DISCOGS_REFRESH_TIME=04:00
DISCOGS_REFRESH_DAY=6

# Regenerate Scheduler
REGEN_INTERVAL_MINUTES=15
REGEN_WITH_METADATA=false
METADATA_REFRESH_QUICK=true

# Volumio
VOLUMIO_HOST=http://YOUR_VOLUMIO_IP:3000
VOLUMIO_URL=http://YOUR_VOLUMIO_IP
VOLUMIO_MUSIC_MOUNT=INTERNAL
VOLUMIO_MPD_HOST=YOUR_VOLUMIO_IP
VOLUMIO_MPD_PORT=6600

# SLSKD
SLSKD_HOST=http://YOUR_SLSKD_IP:5030
SLSKD_API_KEY=your_slskd_api_key

# SABnzbd
SABNZBD_URL=http://YOUR_SABNZBD_IP:8080/api
SABNZBD_API_KEY=your_sabnzbd_api_key

# Plex
PLEX_HOST=YOUR_PLEX_IP
PLEX_PORT=32400
PLEX_TOKEN=your_plex_token

# Navidrome / Subsonic
SUBSONIC_HOST=http://YOUR_NAVIDROME_IP
SUBSONIC_PORT=4533
SUBSONIC_USER=your_username
SUBSONIC_PASSWORD=your_password

# Discogs API
DISCOGS_TOKEN=your_discogs_token

# Last.fm
LASTFM_KEY=your_lastfm_api_key

# FanartTV
FANARTTV_KEY=your_fanarttv_api_key

# AcoustID / Chroma
ACOUSTID_APIKEY=your_acoustid_api_key

# Genius (lyrics)
GENIUS_API_KEY=your_genius_api_key
